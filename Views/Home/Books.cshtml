

@{
    ViewData["Title"] = "Books";
}
<h1>@ViewData["Title"]</h1>

<p>Books in Stock</p>


@model List<Book>

<ul>
<table border="2" cellpadding="10">
    <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Stock</th>
    <th>Available</th>
    </tr>
@foreach (var book in Model)
{   
<tr>
    
    <td>@book.Title</td>
    <td>@book.Author</td>
    <td>@book.Stock</td>
    <td>@book.Available</td>
    <td> <form asp-action="DeleteBook" asp-route-id="@book.Id" method="post"> 
          <button type="submit">Delete</button>
          <td>
          <a asp-action="EditBook" asp-route-id="@book.Id">Edit</a>
          </form></td>
</tr>}
</table>
</ul>



