@model Book;

@{
    ViewData["Title"] = "Add New Book";
}

<h2>Add New Book</h2>

<form asp-action="AddNewBook" method="post">
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Author">Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label asp-for="Stock">Stock</label>
        <input asp-for="Stock" type="number" />
    </div>
    <div>
        <label asp-for="Available">Available</label>
        <input asp-for="Available" type="number" />
    </div>
    <button type="submit">Submit</button>
</form>











